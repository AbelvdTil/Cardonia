@using Cardonia.Model;
@using Cardonia.Model.Cards;
@using Cardonia.Frontend.Components;
@using Cardonia.Model.Table

@implements IRerenderable;

<div class="parent">
    <CardComponent Card="PlayerTable.GetAtPos(1)" />
    <CardComponent Card="PlayerTable.GetAtPos(2)" />
    <CardComponent Card="PlayerTable.GetAtPos(3)" />
</div>

<style>
    .parent {
        border: 1px solid black;
        margin: 1rem;
        padding: 2rem 2rem;
        text-align: center;
    }
</style>

@code {
    [Parameter]
    [EditorRequired]
    public required PlayerTable PlayerTable { get; set; }

    public void Rerender()
    {
        InvokeAsync(StateHasChanged);
    }
}
